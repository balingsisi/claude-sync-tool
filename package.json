{
  "name": "claude-config-sync",
  "version": "0.1.0",
  "description": "Synchronize Claude Code configuration across multiple terminal environments",
  "main": "dist/index.js",
  "bin": {
    "claude-config-sync": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "claude",
    "claude-code",
    "sync",
    "configuration",
    "cli",
    "config-sync"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0",
    "deepmerge": "^4.3.1",
    "glob": "^11.0.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.1",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "README-zh.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
